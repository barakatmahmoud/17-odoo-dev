<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
    <record id="change_state_wizard_form_view" model="ir.ui.view">
        <field name="name">Change state form view</field>
        <field name="model">change.state</field>
        <field name="arch" type="xml">
            <form>
                    <group>
                        <field name="property_id" readonly="1" invisible="1"/>
                        <field name="state" required="1"/>
                        <field name="reason" required="1"/>
                    </group>
                <footer>
                    <button string="Confirm" type="object" class="btn-primary" name="action_confirm"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="change_state_wizard_action" model="ir.actions.act_window">
        <field name="name">Change State</field>
        <field name="res_model">change.state</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    </data>
</odoo>