<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="owner_tree_view" model="ir.ui.view">
        <field name="name">owner.tree.view</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="address"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <record id="owner_form_view" model="ir.ui.view">
        <field name="name">owner.form.view</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
<!--                    ADD Smart Btn and Counter To Show related Properties and number of this-->
                    <div class="oe_button_box" name="button_box">
                    <button name="action_view_property" string="Property"
                        type="object" icon="fa-user">
                        <field name="property_count"
                               widget="statinfo"
                               string="Properties"/>
                    </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                      <field name="phone"/>
                      <field name="address"/>
                    </group>
                    <group>
                        <field name="property_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="owner_action" model="ir.actions.act_window">
        <field name="name">Owner</field>
        <field name="res_model">owner</field>
    </record>

    <menuitem
            id="owner_menu_item"
            name="Owner"
            parent="properties_menu"
            action="owner_action"/>
</odoo>