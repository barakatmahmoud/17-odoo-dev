<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="tag_tree_view" model="ir.ui.view">
        <field name="name">tag.tree.view</field>
        <field name="model">tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="tag_form_view" model="ir.ui.view">
        <field name="name">tag.form.view</field>
        <field name="model">tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                            <field name="active" invisible="1"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tag_action" model="ir.actions.act_window">
        <field name="name">Tag</field>
        <field name="res_model">tag</field>
    </record>

    <menuitem
            id="tag_menu_item"
            name="Tag"
            parent="properties_menu"
            action="tag_action"/>
</odoo>