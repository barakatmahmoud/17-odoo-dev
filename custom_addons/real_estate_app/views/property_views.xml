<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="property_tree_view" model="ir.ui.view">
        <field name="name">property.tree.view</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="post_code"/>
                <field name="date_availability"/>
                <field name="selling_price"/>
                <field name="garden"/>
                <field name="garage"/>
            </tree>
        </field>
    </record>

<!--    ###ADD Custom Search View###-->
    <record id="property_search_view" model="ir.ui.view">
        <field name="name">property.search.view</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="post_code"/>

<!--                ###ADD Custom Filter###-->
                <filter name="is_garden" string="With Garden" domain="[('garden','=',1)]"/>
                <filter name="is_garage" string="With Garage" domain="[('garage','=',1)]"/>

<!--                ###ADD Group By###-->
                <filter name="group_garden" string="Garden" context="{'group_by':'garden'}"/>
            </search>
        </field>
    </record>

    <record id="property_form_view" model="ir.ui.view">
        <field name="name">property.form.view</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
<!--                        ADD Button-->
                        <button string="Set Draft" name="draft_action" type="object" class="btn-primary"
                        invisible="state != 'pending'"/>
                        <button string="Set Pending" name="pending_action" type="object" class="btn-primary"
                        invisible="state != 'draft'"/>
                        <button string="Set Sold" name="sold_action" type="object" class="btn-primary"
                        invisible="state != 'pending'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Basic Info">
                            <field name="description"/>
                            <field name="post_code"/>
                            <field name="date_availability" widget="date"/>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="diff"/>
                            <field name="bedrooms"/>
                        </group>
                        <group string="Additional Info">
                            <field name="owner_id" options="{'no_create': True}"/>
                            <field name="owner_phone"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="garden_area"/>
                            <field name="garden_orientation"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="propert_action" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">property</field>
    </record>

    <menuitem
            id="property_menu_item"
            name="Properties"
            parent="properties_menu"
            action="propert_action"/>
</odoo>