<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="property_tree_view" model="ir.ui.view">
        <field name="name">property.tree.view</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <tree decoration-danger="is_late == True">
                <field name="name"/>
                <field name="post_code"/>
                <field name="date_availability"/>
                <field name="selling_price"/>
                <field name="is_late" invisible="1"/>
                <field name="garden"/>
                <field name="garage"/>
            </tree>
        </field>
    </record>

<!--    ###ADD Custom Search View###-->
    <record id="property_search_view" model="ir.ui.view">
        <field name="name">property.search.view</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="post_code"/>

<!--                ###ADD Custom Filter###-->
                <filter name="is_garden" string="With Garden" domain="[('garden','=',1)]"/>
                <filter name="is_garage" string="With Garage" domain="[('garage','=',1)]"/>

<!--                ###ADD Group By###-->
                <filter name="group_garden" string="Garden" context="{'group_by':'garden'}"/>
            </search>
        </field>
    </record>

    <record id="property_form_view" model="ir.ui.view">
        <field name="name">property.form.view</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
<!--                        ADD Button-->
                        <button string="Set Draft" name="draft_action" type="object" class="btn-primary"
                        invisible="state != 'pending'"/>
                        <button string="Set Pending" name="pending_action" type="object" class="btn-primary"
                        invisible="state != 'draft'"/>
                        <button string="Set Sold" name="sold_action" type="object" class="btn-primary"
                        invisible="state != 'pending'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Basic Info">
                            <field name="description"/>
                            <field name="post_code"/>
                            <field name="date_availability" widget="date"/>
                            <field name="date_expected" widget="date"/>
                            <field name="is_late" readonly="1"/>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="diff"/>
                            <field name="bedrooms"/>
                        </group>
                        <group string="Additional Info">
                            <field name="owner_id" options="{'no_create': True}"/>
                            <field name="owner_phone"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="garden_area"/>
                            <field name="garden_orientation"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Property Line">
                            <field name="property_line_ids">
                                <tree editable="bottom">
                                    <field name="area"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
<!--                ADD Chatter-->
                <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>

    <record id="propert_action" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">property</field>
    </record>

<!--    ADD Server action-->
    <record id="propert_close_server_action" model="ir.actions.server">
        <field name="name">Close</field>
        <field name="model_id" ref="model_property"/>
        <field name="binding_model_id" ref="model_property"/>
        <field name="state">code</field>
        <field name="code">
            action = records.closed_action()
        </field>
    </record>

<!--    ADD Cron Job-->
    <record id="check_selling_date_crom" model="ir.cron">
        <field name="name">Property: Check selling Date</field>
        <field name="model_id" ref="model_property"/>
        <field name="state">code</field>
        <field name="code">model.check_expected_selling_date()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
         <field name="active" eval="True"/>
    </record>

    <menuitem
            id="property_menu_item"
            name="Properties"
            parent="properties_menu"
            action="propert_action"/>
</odoo>