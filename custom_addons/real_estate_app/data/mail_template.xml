<odoo>
    <data>
<!--        ADD Mail Template -->
    <record id="email_template_property_sold" model="mail.template">
        <field name="name">Property Sold Notification</field>
        <field name="model_id" ref="model_property"/>
        <field name="subject">Property {{ object.name }} Sold</field>
        <field name="email_from">{{ user.email or 'noreply@example.com' }}</field>
        <field name="email_to">{{ ctx.get('email_to') }}</field>
        <field name="lang">{{ user.lang }}</field>
        <field name="body_html" type="html">
            <div>
            <p>
                Dear <t t-out="object.owner_id.name or ''"/>
            </p>
            <p>
                We would like to inform you that the property
                <strong><t t-out="object.name or ''"/></strong>
                has been sold.
            </p>
            <p>
                <strong>Price:</strong> <t t-out="object.selling_price or ''"/> <br/>
                <strong>Date:</strong> <t t-out="object.date_expected or ''"/> <br/>
            </p>
            <p>
                Best Regards,<br/>
                <t t-out="user.name or ''"/>
            </p>
            </div>
        </field>
    </record>
    </data>
</odoo>